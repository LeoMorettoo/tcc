<div class="col-sm-12 row">
  <div class="col-sm-10 text-left">
    <h1>Lista de árvores</h1>
  </div>
  <div class="col-sm-2 text-right">
    <%= link_to 'Nova árvore', new_tree_path ,:class => "btn btn-primary btn-lg" %>
  </div>
</div>
<table class="table table-hover table-bordered">
  <thead class="thead-inverse">
    <tr>
      <th>Cod</th>    
      <th>Usuario</th>
      <th>Nome da árvore</th>
      <th>Número de instancias</th>
      <th>Número de variaveis</th>
      <th>Tamanho da árvore</th>
      <th colspan="3" >Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @trees.each do |tree| %>
      <tr>
        <th scope="row"><%= tree.id %></th>
        <td><%= tree.user.name %></td>
        <td><%= tree.name %></td>
        <td><%= tree.leaf_number %></td>
        <td><%= tree.variable_numbers %></td>
        <td><%= tree.tree_size %></td>
        <td><%= link_to 'Mostrar', :controller => :nodes, :action => :cenario , :id => tree.id %></td>
        <td><%= link_to 'Deletar', tree, method: :delete, data: { confirm: 'Tem certeza? Todas as informaçoes serão perdidas' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

