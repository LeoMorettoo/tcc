<p id="notice"><%= notice %></p>

<h1>Listing Trees</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Instances numbers</th>
      <th>Variable numbers</th>
      <th>Tree size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trees.each do |tree| %>
      <tr>
        <td><%= tree.user %></td>
        <td><%= tree.name %></td>
        <td><%= tree.leaf_number %></td>
        <td><%= tree.variable_numbers %></td>
        <td><%= tree.tree_size %></td>
        <td><%= link_to 'Show', tree %></td>
        <td><%= link_to 'Edit', edit_tree_path(tree) %></td>
        <td><%= link_to 'Destroy', tree, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

